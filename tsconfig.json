{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "removeComments": false,
    "noImplicitAny": false,
    "allowJs": true,
    "baseUrl": "./src",
    "paths": {
      "@commands/*": ["commands/*"],
      "@messages/*": ["messages/*"],
      "@state/*": ["state/*"],
      "@webhooks/*": ["webhooks/*"],
      "@google-sheets/*": ["google-sheets/*"],
      "@telegram-api/*": ["telegram-api/*"],
      "@shared/*": ["shared/*"],
      "@commands": ["commands"],
      "@messages": ["messages"],
      "@state": ["state"],
      "@webhooks": ["webhooks"],
      "@google-sheets": ["google-sheets"],
      "@telegram-api": ["telegram-api"],
      "@shared": ["shared"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}